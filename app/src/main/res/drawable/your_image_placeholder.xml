<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/your_image_placeholder.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the placeholder -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Light gray color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- Icon in the center of the placeholder -->
    <item android:gravity="center">
        <!-- You can replace this with your own drawable or use a TextView for text -->
        <bitmap
            android:src="@drawable/ic_baseline_image_24"
            android:tint="#FFFFFF" /> <!-- Icon color, set to white in this example -->
    </item>
</layer-list>
